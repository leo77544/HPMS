<style>
    ul.pagination {
        display: inline-block;
        padding: 0;
        margin: 0;
        float: right;
        text-align: center;
    }

        ul.pagination li {
            display: inline;
        }

            ul.pagination li a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
            }

                ul.pagination li a.active {
                    background-color: #12c1a6;
                    color: white;
                }

                ul.pagination li a:hover:not(.active) {
                    background-color: #46ba41;
                    color: white;
                }
</style>
<script>

    //当前页码
    var index = 1;
    //每页显示的条数
    var size = 10;
    //总页数
    var allPage;
    //总条数
    //+" " + this.dMSTime.toString().substring(11, 19)
    var allCount;
    datalist(index, size);
    function datalist(page, size) {
        index = page;
        $.ajax({
            url: "/HPMs/Recordlist/?page=" + page + "&size=" + size,
            type: "get",
            dataType: "json",
            success: function (data) {
                allPage = data.TotalPage;
                allCount = data.TotalCount;
                $("#content").empty();
                $(data.relist).each(function () {
                    var tr = '<tr>'
                        + '<td>' + this.costName + '</td>'
                        + '<td>' + this.costPricce + '</td>'
                        + '<td>' + this.tjStime.toString().substring(0, 10) + " " + this.tjStime.toString().substring(11, 19)+ '</td>'
                        + '<td>' + this.sZState + '</td>'
                        + '</tr>'
                    $("#content").append(tr);
                });
                var page = "<ul class='pagination'>"
                    + "<li><a href = '#' class='active'> 共" + data.TotalCount + "条记录，当前显示第" + index + " 页， 共" + data.TotalPage + "页</a></li>"
                    + "<li><a href='javascript:datalist(1," + size + ")'>首页</a></li>"
                    + "<li><a href='javascript:datalist(" + (index == 1 ? 1 : index - 1) + "," + size + ")'>上一页</a></li>"
                    + "<li><a href='javascript:datalist("+(index == allPage ? allPage : index + 1)+","+size+ ")'>下一页</a></li>"
                    + "<li><a href='javascript:datalist(" + data.TotalPage + "," + size + ")'>尾页</a></li>"
                    + "</ul>"
                $("#fto").empty().append(page);
            }
        });
    }
</script>