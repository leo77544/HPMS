<div class="page-header">
    <h1>
        幸福里控制台
        <small>
            <i class="icon-double-angle-right"></i>
            查看
        </small>
    </h1>
</div><!-- /.page-header -->

<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->

        <div class="alert alert-block alert-success">
            <button type="button" class="close" data-dismiss="alert">
                <i class="icon-remove"></i>
            </button>

            <i class="icon-ok green"></i>

            欢迎使用
            <strong class="green">
                幸福里物业系统
                <small>(v1.0)</small>
            </strong>
            ,这里为您提供更更方便的物业管理。
        </div>

        <div>
            <div class="row">


                <div class="col-xs-12">

                    <form class="form-horizontal" role="form" action="AddDataMoney">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 户主姓名 </label>

                            <div class="col-sm-9">
                                <input type="text" id="form-field-1" placeholder="用户名" class="col-xs-10 col-sm-5" name="HostName" />
                            </div>
                        </div>
                        <div class="space-4"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 缴纳金额 </label>

                            <div class="col-sm-9">

                                <input type="text" id="form-field-1" placeholder="输入金额" class="col-xs-10 col-sm-5" name="DMSum" />
                                @*<input type="text" id="form-field-1" plaaceholder="输入金额" class="col-xs-10 col-sm-5" />*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 收费人员 </label>

                            <div class="col-sm-9">
                                <input type="text" id="form-field-1" class="col-xs-10 col-sm-5" value="物业收费管理员" readonly="readonly" name="DMName" />
                            </div>
                        </div>

                        <div class="space-4"></div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-2"> 缴费类别 </label>

                            <div class="col-sm-9">
                                <select style="width:525.61px;height:28px" name="DMType">
                                    <option value="" selected="selected">-- 请选择缴费类型 --</option>
                                    <option value="水费">水费</option>
                                    <option value="电费">电费</option>
                                    <option value="燃气费">燃气费</option>
                                    <option value="车位费">车位费</option>
                                    <option value="物业费">物业费</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-2"> 缴费方式 </label>

                            <div class="col-sm-9">
                                <select style="width:525.61px;height:28px" name="DMWay" id="pay">
                                    <option value="" selected="selected">-- 请选择缴费类型 --</option>
                                    <option value="支付宝">支付宝</option>
                                    <option value="微信">微信</option>
                                    <option value="现金">现金</option>
                                </select>
                            </div>
                        </div>
                        <div id="conent">
                            231
                        </div>
                        @*<div class="hr hr-24" id="conent">
                            231
                        </div>*@


                        <div class="clearfix form-actions">
                            <div class="col-md-offset-3 col-md-9">
                                <button class="btn btn-info" type="submit">
                                    <i class="icon-ok bigger-110"></i>
                                    确认收费
                                </button>


                            </div>
                        </div>





                    </form>
                </div><!-- /span -->
            </div><!-- /row -->

        </div>
        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->

</div><!-- /.row -->
<script>
    $("#pay").change(function () {
        alert();

        var str = $("#pay").val();
        if (str === "支付宝") {
            alert(str);
            $("#conent").append('<a href="http://www.payasp.com/alipay/">支付宝付款</a>');
        }
        if (str === "微信") {

        }
    })

</script>