<div class="page-header">

    <div>
        <div class="row">


            <div class="col-xs-12">

                <form class="form-horizontal">


                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 户主姓名 </label>

                        <div class="col-sm-9">
                            <input type="text" id="HostName" placeholder="用户名" class="col-xs-10 col-sm-5" name="HostName" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 收费人员 </label>

                        <div class="col-sm-9">
                            <input type="text" id="DMName" class="col-xs-10 col-sm-5" value="物业收费管理员" readonly="readonly" name="DMName" />
                        </div>
                    </div>

                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-2"> 缴费类别 </label>

                        <div class="col-sm-9">
                            <select style="width:525.61px;height:28px" name="DMType" id="DMType">
                                <option value="" selected="selected">-- 请选择缴费类型 --</option>
                                <option value="水费">水费</option>
                                <option value="电费">电费</option>
                                <option value="燃气费">燃气费</option>
                                <option value="车位费">车位费</option>
                                <option value="物业费">物业费</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 缴纳金额 </label>
                        <div class="col-sm-9">
                            <input type="text" id="DMSum" class="col-xs-10 col-sm-5" name="DMSum" readonly="readonly" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-2"> 缴费方式 </label>

                        <div class="col-sm-9">
                            <select style="width:525.61px;height:28px" name="DMWay" id="pay">
                                <option value="" selected="selected">-- 请选择缴费类型 --</option>
                                <option value="支付宝">支付宝</option>
                                <option value="微信">微信</option>
                                <option value="现金">现金</option>
                            </select>
                        </div>
                    </div>
                    <div id="conent">
                    </div>
                    @*<div class="hr hr-24" id="conent">
                            231
                        </div>*@


                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info" type="button" id="" onclick="addDataMoney()">
                                <i class="icon-ok bigger-110"></i>
                                确认收费
                            </button>
                        </div>
                    </div>
                </form>
            </div><!-- /span -->
        </div><!-- /row -->

    </div>
    <script>
        $("#DMSum").blur(function () {
            var num = document.getElementById('DMSum').value;
            if (num) {
                if (isNaN(num)) {
                    document.getElementById('DMSum').value = "";
                    document.getElementById('DMSum').placeholder = "输入错误，请填写数字！";
                    return false;
                }
            }
        })
        function addDataMoney() {
            var da = new Object();
            da.HostName = $("#HostName").val();
            da.DMSum = $("#DMSum").val();
            da.DMName = $("#DMName").val();
            da.DMType = $("#DMType").val();
            da.DMWay = $("#pay").val();
            da.Remark = "无";
            da.DMSTime = new Date().getFullYear() + "-" + (new Date().getMonth() + 1) + "-" + new Date().getDate() + " " + new Date().getHours() + ":" + new Date().getMinutes() + ":" + new Date().getSeconds();
            da.DMNumber = (new Date().getFullYear().toString() + (new Date().getMonth() + 1).toString() + new Date().getDate().toString() + new Date().getHours().toString() + new Date().getMinutes().toString() + new Date().getSeconds().toString()).toString();
            $.ajax({
                url: "/HPMS/AddDataMoney?m=" + JSON.stringify(da),
                type: "post",
                dataType: "json",
                success: function (data) {
                    if (data.toString() == "2") {
                        $.ajax({
                            url: "/hpms/JiaoFei/",
                            success: function (data) {
                                $(".page-content").empty();
                                $(".page-content").append(data);
                            }
                        })
                    }
                }
            })
        }

        $("#pay").change(function () {
            var str = $("#pay").val();
            if (str === "支付宝") {
                window.open("http://www.payasp.com/alipay/");
            }
            if (str === "微信") {
                window.open("http://www.PayAsp.com/Pay");
            }
        })
        $("#DMType").change(function () {
            if ($("#DMType").val() === "水费" || $("#DMType").val() === "电费" || $("#DMType").val() === "燃气费") {
                $("#DMSum").val("120.00");
            }
            if ($("#DMType").val() === "物业费") {
                $("#DMSum").val("800.00");
            }
            if ($("#DMType").val() === "车位费") {
                $("#DMSum").val("1500.00");
            }
        })
    </script>
