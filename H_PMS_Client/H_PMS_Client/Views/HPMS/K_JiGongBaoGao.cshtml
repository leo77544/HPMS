    <script>
        var jggetputRepairId;
        var jggetputHouseId;
        GetRepAllCNM();

        function GetRepAllCNM() {
            $.ajax({
                url: "/HPMS/GetRepByLX/?lx=3",
                success: function (data) {
                    $("#jgRepShowAll").empty();
                    $(JSON.parse(data)).each(function () {

                        var indexRT = this.RSTime.lastIndexOf("\T");
                        var grmRSTime = this.RSTime.substring(0, indexRT);
                        var indexMT = this.MaintainTime.lastIndexOf("\T");
                        var grmMaintainTime = this.MaintainTime.substring(0, indexMT);
                        var indexReRemark = this.ReRemark.lastIndexOf("\：");
                        var grmReRemark = this.ReRemark.substring(indexReRemark + 1, this.ReRemark.length);

                        $("#jgRepShowAll").append('<div style="width:800px;height:350px;float:left;color:' + (this.Estimate == "尚未解决" ? "#249ded" : (this.Estimate == "完美解决" ? "#fff" : (this.Estimate == "等待审核" ? "#808080" : "#fff"))) + ';float:left;margin-left:20px;margin-top:20px;background-color:' + (this.Estimate == "尚未解决" ? "#dff0d8" : (this.Estimate == "完美解决" ? "#fab6e1" : (this.Estimate == "等待审核" ? "#eeebb9" : "#7fe5cf"))) + '" data-toggle="modal" data-target="#myModal" onclick="' + (this.Estimate == "尚未解决" ? "getModalNoRepShow( \'" + this.RepairId + "\',\'" + this.HostName + "\',\'" + this.HouseId + "\',\'" + this.ReNumber + "\',\'" + this.MaintainName + "\',\'" + this.RSTime + "\',\'" + this.MaintainTime + "\',\'" + this.ServePrice + "\',\'" + this.GoodsPrice + "\',\'" + this.Estimate + "\',\'" + grmReRemark + "\')" : "getModalOKRepShow( \'" + this.RepairId + "\',\'" + this.HostName + "\',\'" + this.HouseId + "\',\'" + this.ReNumber + "\',\'" + this.MaintainName + "\',\'" + this.RSTime + "\',\'" + this.MaintainTime + "\',\'" + this.ServePrice + "\',\'" + this.GoodsPrice + "\',\'" + this.Estimate + "\',\'" + grmReRemark + "\')") + '"><table style="width:100%;height:350px;vertical-align:middle;border:2px solid black"><tr><td id="wxtd">维修单据：</td><td id="wxtd2" colspan="3">' + this.ReNumber + '</td></tr><tr><td id="wxtd">房主姓名：</td><td id="wxtd2">' + this.HostName + '</td><td id="wxtd">报修日期：</td><td id="wxtd2">' + grmRSTime + '</td></tr><tr><td id="wxtd">维修内容：</td><td id="wxtd2" colspan="3">' + grmReRemark + '</td></tr><tr><td id="wxtd">维修人员：</td><td id="wxtd2">' + this.MaintainName + '</td><td id="wxtd">维修日期：</td><td id="wxtd2">' + grmMaintainTime + '</td></tr><tr><td id="wxtd">物料费用：</td><td id="wxtd2">' + this.GoodsPrice + '</td><td id="wxtd">服务费用：</td><td id="wxtd2">' + this.ServePrice + '</td></tr><tr ><td id="wxtd">进程：</td><td id="wxtd2" colspan="3">' + this.Estimate + '</td></tr ></table></div>');
                    })
                }
            })
        }

        function getModalNoRepShow(RepairId, HostName, HouseId, ReNumber, MaintainName, RSTime, MaintainTime, ServePrice, GoodsPrice, Estimate, ReRemark) {
            jggetputRepairId = RepairId;
            jggetputHouseId = HouseId;
            alert(HouseId);
            alert(jggetputHouseId);
            $.ajax({
                url: "/HPMS/GetEmpByRep",
                success: function (data) {
                    $(JSON.parse(data)).each(function () {
                        if (this.EName == MaintainName) {
                            $("#jgMaintainName").append('<option value="' + this.EmployeeId + '" selected="selected">' + this.EName + '</option>');
                        } else {
                            $("#jgMaintainName").append('<option value="' + this.EmployeeId + '" >' + this.EName + '</option>');
                        }
                    })
                }
            })

            $("#jgReNumber").html(ReNumber);
            $("#jgHostName").html(HostName);
            var indexRT = RSTime.lastIndexOf("\T");
            $("#jgRSTime").html(RSTime.substring(0, indexRT));
            var indexMT = MaintainTime.lastIndexOf("\T");
            $("#jgMaintainTime").val(MaintainTime.substring(0, indexMT));
            $("#jgServePrice").val(ServePrice);
            $("#jgGoodsPrice").val(GoodsPrice);
            $("#jgReRemark").val(ReRemark);

        }

        function getModalOKRepShow(RepairId, HostName, HouseId, ReNumber, MaintainName, RSTime, MaintainTime, ServePrice, GoodsPrice, Estimate, ReRemark) {
            jggetputRepairId = RepairId;
            jggetputHouseId = HouseId;

            $.ajax({
                url: "/HPMS/GetEmpByRep",
                success: function (data) {
                    $(JSON.parse(data)).each(function () {
                        if (this.EName == MaintainName) {
                            $("#jgMaintainName").append('<option value="' + this.EmployeeId + '" selected="selected">' + this.EName + '</option>');
                        } else {
                            $("#jgMaintainName").append('<option value="' + this.EmployeeId + '" >' + this.EName + '</option>');
                        }
                    })
                }
            })

            $("#jgReNumber").html(ReNumber);
            $("#jgHostName").html(HostName);
            var indexRT = RSTime.lastIndexOf("\T");
            $("#jgRSTime").html(RSTime.substring(0, indexRT));
            var indexMT = MaintainTime.lastIndexOf("\T");
            $("#jgMaintainTime").val(MaintainTime.substring(0, indexMT));
            $("#jgServePrice").val(ServePrice);
            $("#jgGoodsPrice").val(GoodsPrice);
            $("#jgReRemark").val(ReRemark);

        }

        function uptjgREP() {
            var p = new Object();
            p.RepairId = jggetputRepairId;
            p.HostName = $("#jgHostName").text();
            p.HouseId = jggetputHouseId;
            p.ReNumber = $("#jgReNumber").text();
            var jgMNS = $("#jgMaintainName option:selected");
            p.MaintainName = jgMNS.text();
            p.RSTime = $("#jgRSTime").text();
            p.MaintainTime = $("#jgMaintainTime").val();
            p.ServePrice = $("#jgServePrice").val();
            p.GoodsPrice = $("#jgGoodsPrice").val();
            p.PriceSum = Number($("#jgServePrice").val()) + Number($("#jgGoodsPrice").val());
            if ($('input:radio[name="jgEstimate"]:checked').val() == "1") {
                p.Estimate = "尚未解决";
                p.ReRemark = "待修" + "；情况：" + $("#jgReRemark").val();
            } else {
                p.Estimate = "不符合维修条件，审核驳回！"
                p.ReRemark = "入住" + "；情况：" + $("#jgReRemark").val();
            }

            $.ajax({
                url: "/HPMS/PutRepBuREP",
                data: { rep: JSON.stringify(p) },
                type: "post",
                dataType: "json",
                success: function (data) {
                    if (data != "") {
                        $(".bg-model").hide();
                        GetRepAllCNM();
                        quxiaoREP();
                        $("#box").css("display", "inline");
                        setTimeout("tishiclose()", 1000);
                    } 
                }
            })
        }
        function quxiaouptjgREP() {
            $(".bg-model").hide();
        }

    </script>

